app/views/users/index.html.erb

<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if current_user.admin? %>
      | <%= link_to "delete", user, :method => :delete, :confirm => "Varmastiko?",
                                :title => "Delete #{user.name}" %>
  <% end %>
    </li>
  <% end %>
</ul>

