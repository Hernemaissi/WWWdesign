<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= @user.name %>
      </h1>
      <% if current_user?(@user) %>
        <% @user.ads.each do |ad| %>
        <div id="user_ad">
         <img src="<%=ad.image_url %>" title="ad"  width="100" height="100" />
         <%= link_to "Requests: #{ad.requests.count}", ad %>
        <% end %>
      <% end %>
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %><br />
      <% if current_user?(@user) %>
        <%= link_to "Post new ad", new_ad_path  %><br />
        <strong>Notifications</strong> <%= @user.notifications %><br />
      <% end %>
      
    </td>
  </tr>
</table>