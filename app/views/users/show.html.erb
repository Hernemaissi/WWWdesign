<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= @user.name %>
      </h1>
      <% if current_user?(@user) %>
        <% @user.ads.each do |ad| %>
        <div id="user_ad">
         <img src="<%=ad.image_url %>" title="ad"  width="100" height="100" />
         <%= link_to "Vuokrauspyynnöt: #{ad.requests.count}", ad %>
         <%= link_to "Muokkaa", edit_ad_path(ad) %>
        <% end %>
      <% end %>
    </td>
    <td class="sidebar round">
      <strong>Nimi</strong> <%= @user.name %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %><br />
      <strong>Tiedotteet</strong> <%= @user.notifications %><br />
     	<div id="new_ad_button">
     		<% if current_user?(@user) %>
      		  <%= link_to "Lisää uusi vaate", new_ad_path  %><br />
     		<% end %>
     	</div>
    </td>

    </td>
  </tr>
</table>