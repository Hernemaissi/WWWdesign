
  <img src="<%=@ad.image_url%>" alt="Ad" /><br />
  Title: <%=@ad.title%><br />
  Price: <%=@ad.price%><br />
  
  <% if @ad.size? %>
  	Size: <%=@ad.size%><br />
  <% end %>
  
  <% if @ad.color? %>
  	Color: <%=@ad.color%><br />
  <% end %>
  
  <% if @ad.material? %>
  	Material: <%=@ad.material%><br />
  <% end %>
  
  <% if @ad.condition? %>
  	Condition: <%=@ad.condition%><br />
  <% end %>
  
  <% if @ad.category_id? %>
  Category: <%=@ad.category.name %><br />
  <% end %>
  

  Parts: <br />
  <% @ad.parts.each do |part| %>
    <%= part.name %><br />
	<% end %>
  
  Description: <%=@ad.description%><br />
  
  <div id="available">
  <% if @ad.available %>
    Currently Available<br />
  <% else %>
    Currently Taken<br />
  <% end %>
  </div>
  Posted by: <%=@ad.user.name%>
  <% if current_user?(@ad.user) %>
    <br /><%= link_to("Toggle available",  toggle_path(:id => @ad.id), :method => :post) %>
  <% end %>
  <br />
  <%= render 'request_form' if signed_in? %>
  <%= render 'show_requests' if current_user?(@ad.user) %>