<div class= "ads_for_single_category">
      <div class="Category_name">
        <%= link_to c.name, c, :remote => true %>
      </div>
      <% c.ads.each do |ad| %>
        Price: <%=ad.price%>
        <div class="picture">
        <a class="small" href="/ads/<%=ad.id%>/" title="small image"><img src="<%=ad.image_url %>" title="small image" width="100" height="100" />
        <img class="large" src="<%=ad.image_url %>" title="large image" /></a>
        </div>
      <% end %>
</div>