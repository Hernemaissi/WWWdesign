<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag :common %>
    

    <% if cookies.signed[:gender] && cookies.signed[:gender] == "Naiset" %> 
    	<%= stylesheet_link_tag "Naiset", :id => "switch_style" %>
    <% else %>
    	<%= stylesheet_link_tag "Miehet", :id => "switch_style" %>
    <% end %>
    
    <!--fix this -->
    <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/cupertino/jquery-ui.css" %>
  </head>
  <body>
    <div class="container">
    	<a class="signup_button round" href="/signup">Kirjaudu sisään!</a>
    	<%= link_to logo, root_path, :id => "logo" %>
	
      <ul id="gender_tab">
		    <li id="Miehet" class="trans_bg 
		    	<% if cookies.signed[:gender] && cookies.signed[:gender] == "Miehet" %> 
  						selected
    			<% end %>
    			">Miehet
    		</li> 
		    <li id="Naiset" class="trans_bg
		    	<% if cookies.signed[:gender] && cookies.signed[:gender] == "Naiset" %> 
  						selected
    			<% end %>		    	
			    ">Naiset
		    </li> 
		  </ul> 
      
      <%= render 'layouts/header' %>
      
      <section class="round trans_bg">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      
  <!--    <%= render 'layouts/footer' %>	-->
      <%= debug(params) if Rails.env.development? %>
	     
    </div>
  </body>
</html>
