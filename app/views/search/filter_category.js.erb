/* mark selected category with check */ 

$("#categories").children().each(function(){
	$(this).removeClass("selected");
});

$("#categories #<%= escape_javascript(@selected_category.id.to_s()) %>").addClass("selected");

/* get parts if any */
$("#parts").html("<%= escape_javascript(render :partial => 'search/filter_category', :locals => {:parts => @parts}) %>");


